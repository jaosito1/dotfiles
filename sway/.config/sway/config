include ./styles.conf
include ./keybinds.conf

set $mod Mod1

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:JetBrainsMono Nerd Font Mono 10


bar swaybar_command waybar
# exec_always gammastep && dunst
exec_always dunst & gammastep

# Clipboard functionality 
exec_always wl-paste --watch cliphist store
bindsym $mod+s exec 'grim -g "$(slurp)" - | wl-copy'
bindsym $mod+Shift+s exec 'grim - | wl-copy'
bindsym $mod+c exec "cliphist list | rofi -dmenu | cliphist decode | wl-copy"

# output * bg ~/dotfiles/wallpapers/wp6.png fill
# output * bg ~/downloads/test.jpg fill
output eDP-1 mode 2880x1800@120Hz pos 1920 0
output DP-2 mode 1920x1080@100Hz pos 0 0

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec kitty 
# kill focused window
bindsym $mod+Shift+q kill
# start dmenu (a program launcher)
bindsym $mod+d exec "rofi -show drun"
#lock screen
bindsym $mod+ctrl+l exec "swaylock"
